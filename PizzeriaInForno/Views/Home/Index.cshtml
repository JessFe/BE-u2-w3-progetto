@{
    ViewBag.Title = "Home Page";
}



<main>

    @*ABOUT US*@

    <div class="row py-3 my-5">
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <div>
                        <img src="..\Content\assets\img\zz_aboutus01.png" alt="" class="card-img rounded-3" style="height:40vh; object-fit: cover;">
                    </div>

                </div>
                <div class="col-6">
                    <div class="d-flex flex-column justify-content-between h-100">
                        <img src="..\Content\assets\img\zz_aboutus02.png" alt="" class="card-img rounded-3" style="height: 19vh; object-fit: cover;">
                        <img src="..\Content\assets\img\zz_aboutus03.png" alt="" class="card-img rounded-3" style="height: 19vh; object-fit: cover;">
                    </div>

                </div>

            </div>
        </div>
        <div class="col-6">
            <div class="d-flex flex-column justify-content-center h-100">
                <h3 class="border-bottom border-danger w-50 mb-4 pb-2 px-3">About <span class="text-cst-red">Us</span></h3>
                <h4 class="px-3">We Offer A Slice Of Italy Straight To Your Doorstep</h4>
                <p class="px-3">
                    Our pizzas are more than just food; they're a canvas of rich, authentic flavors, crafted with a selection of premium ingredients that capture the essence of Italy's culinary heart. <br />
                    Each bite is a celebration of tradition and innovation, where the classic and the contemporary meet to create something truly special. <br These creations are a harmonious blend of authentic tastes and the joy of sharing, designed to bring the pleasure of gathering around a meal that feels like home, no matter where you are.
                </p>
            </div>
        </div>
    </div>


    @*PROMOS*@

    <div class="row py-2 my-5">
        <div class="col-4">
            <div class="d-flex flex-column justify-content-between bg-cst-red text-white rounded-3 p-4 me-2 h-100">
                <h4 class="fw-bold">FREE PIZZA</h4>
                <p class="fs-6">Buy 5 pizzas, the 6th is on us!</p>
                <a href="@Url.Action("Catalogo", "Prodotti")" class="text-smallcaps fs-5 fw-semibold link-light">Order Now</a>


            </div>
        </div>
        <div class="col-4">
            <div class="d-flex flex-column justify-content-between text-white rounded-3 p-4 mx-2 h-100" style="background-color: #FF9D2E;">
                <h4 class="fw-bold">FREE SODA</h4>
                <p class="fs-6">Get 1 free can for every 2 pizzas you order</p>
                <a href="@Url.Action("Catalogo", "Prodotti")" class="text-smallcaps fs-5 fw-semibold link-light">Order Now</a>


            </div>
        </div>
        <div class="col-4">
            <div class="d-flex flex-column justify-content-between text-white rounded-3 p-4 ms-2 h-100" style="background-color: #219652;">
                <h4 class="fw-bold">A GIFT 4 U</h4>
                <p class="fs-6">Unlock a special surprise with your 4th order</p>
                <a href="@Url.Action("Catalogo", "Prodotti")" class="text-smallcaps fs-5 fw-semibold link-light">Order Now</a>


            </div>
        </div>
    </div>


    @*CHOOSE US*@

    

<div class="row py-3 my-5 d-flex justify-content-center">

