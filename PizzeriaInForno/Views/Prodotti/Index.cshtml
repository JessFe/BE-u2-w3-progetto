@model IEnumerable<PizzeriaInForno.Models.Prodotti>

@{
    ViewBag.Title = "Pizzas";
}

<h2>Pizzas</h2>
<div class="d-flex justify-content-end">
    <a href="@Url.Action("Create", "Prodotti")" class="btn btn-warning btn-cst-red px-3"><i class="bi bi-plus-square"></i> Add a Pizza</a>
</div>

<table class="table my-3">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredienti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeProd)
        </td>
        <td>
            <img src="@Url.Content("~/Content/assets/img/" + item.Foto)" alt="item.NomeProd" style="width: 100px; height: auto;" class="rounded-3" />
        </td>
        <td>
            $ @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsMin) mins
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredienti)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.IDProdotto })" class="btn btn-warning btn-cst-red">
                <i class="bi bi-pencil-square"></i>
            </a>
        </td>
    </tr>
}

</table>
