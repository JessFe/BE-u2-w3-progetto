@model PizzeriaInForno.Models.SchedaOrdine

@{
    ViewBag.Title = "Riepilogo Ordine";
    decimal totaleCarrello = Model.Articoli.Sum(item => item.Quantita * item.Prezzo);
}

<h2>Riepilogo del tuo Ordine</h2>

@using (Html.BeginForm("AggiornaCarrello", "Ordini", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>Prodotto</th>
                <th>Quantità</th>
                <th>Prezzo</th>
                <th>Totale</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Articoli.Count; i++)
            {
                <tr>
                    <td>@Model.Articoli[i].NomeProd</td>
                    <td>
                        @Html.HiddenFor(m => m.Articoli[i].IDProdotto)
                        @Html.TextBoxFor(m => m.Articoli[i].Quantita, new { @class = "form-control", type = "number", min = "1" })
                    </td>
                    <td>@Model.Articoli[i].Prezzo €</td>
                    <td>@(Model.Articoli[i].Quantita * Model.Articoli[i].Prezzo) €</td>
                    <td>
                        <button type="submit" formaction="@Url.Action("RimuoviDalCarrello", "Ordini", new { index = i })" class="btn btn-danger btn-sm">Rimuovi</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-secondary">Aggiorna Carrello</button>
}



<div class="total-carrello">
    <strong>Totale Carrello: @totaleCarrello €</strong>
</div>

@using (Html.BeginForm("Conferma", "Ordini", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="indirizzo">Indirizzo di Spedizione</label>
        <input type="text" class="form-control" id="indirizzo" name="indirizzo" required>
    </div>
    <div class="form-group">
        <label for="note">Note</label>
        <textarea class="form-control" id="note" name="note" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Conferma Ordine</button>
}
